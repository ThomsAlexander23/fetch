<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:elevation="5dp" >

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            tools:ignore="MissingConstraints"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/button"
            app:layout_constraintStart_toStartOf="@+id/button"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            android:radius="15dp" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/purple_logo"
            android:fontFamily="sans-serif-condensed" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.442" android:layout_marginTop="20dp" android:elevation="3dp"
            android:id="@+id/action_list"/>
    <Button
            android:layout_width="363dp"
            android:layout_height="68dp"
            android:background="@color/orange_logo"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="4dp" android:id="@+id/button" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>